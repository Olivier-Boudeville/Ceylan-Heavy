# Ad-hoc makefile for Orge's prerequisites.

# Actual source file is:
# ceylan/Ceylan/trunk/src/code/scripts/erlang/top-Ceylan-Erlang-GNUmakefile
# To be copied as Ceylan-Erlang/GNUmakefile.

.PHONY: all clean co ci up st


SVN_ROOT = "http://ceylan.svn.sourceforge.net/svnroot/ceylan/Ceylan/trunk/src/code/scripts/erlang"


SVN_OPT = --username wondersye


MODULES_DIRS = common wooper traces


all:
	@for m in $(MODULES_DIRS); do ( cd $$m ; $(MAKE) all ) ; done


clean:
	@for m in $(MODULES_DIRS); do ( cd $$m ; $(MAKE) clean ) ; done


# Useful if having version mismatches for SVN:
co:
	@for m in $(MODULES_DIRS); do svn co $(SVN_ROOT)/$$m $(SVN_OPT) ; done


ci:
	@for m in $(MODULES_DIRS); do svn co $(SVN_ROOT)/$$m $(SVN_OPT) ; done


up:
	@for m in $(MODULES_DIRS); do ( cd $$m ; svn update ) ; done


st:
	@for m in $(MODULES_DIRS); do ( cd $$m ; svn status ) ; done
